{
    "name": "light-dom-element-test",
    "description": "Webcomponent light-dom-element-test following open-wc recommendations",
    "license": "MIT",
    "author": "light-dom-element-test",
    "version": "0.0.4",
    "main": "dist/src/index.js",
    "module": "dist/src/index.js",
    "exports": {
        ".": "./dist/src/index.js",
        "./light-dom-element-test.js": "./dist/src/light-dom-element-test.js"
    },
    "scripts": {
        "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
        "build": "bash build.sh",
        "generate-wc-docs": "tsc && custom-elements-manifest analyze --litelement && node ./md-generate.mjs",
        "prepublish": "tsc",
        "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
        "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
        "test": "bash test.sh",
        "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
        "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
        "storybook:build": "tsc && build-storybook"
    },
    "dependencies": {
        "css-chain": "^1.1.3",
        "light-dom-element": "^0.0.4",
        "lit": "^2.2.2",
        "shadow-dom-element": "0.0.4"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.5.7",
        "@custom-elements-manifest/to-markdown": "^0.1.0",
        "@open-wc/eslint-config": "^4.3.0",
        "@open-wc/testing": "^3.1.3",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "@web/dev-server": "^0.1.30",
        "@web/dev-server-storybook": "^0.5.0",
        "@web/test-runner": "^0.13.27",
        "concurrently": "^7.1.0",
        "esbuild": "^0.14.38",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.4.0",
        "prettier": "^2.6.2",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "@open-wc",
            "prettier"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "no-unused-vars": "off",
            "no-return-assign": "off",
            "wc/attach-shadow-constructor": "off",
            "@typescript-eslint/no-unused-vars": [
                "error"
            ],
            "import/no-unresolved": "off",
            "import/extensions": [
                "error",
                "always",
                {
                    "ignorePackages": true
                }
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "customElements": "custom-elements.json"
}
